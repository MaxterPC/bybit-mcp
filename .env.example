# Bybit API credentials
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Set to "false" for mainnet (production)
BYBIT_TESTNET=true

# OAuth 2.1 secret for signing JWTs (required to enable auth)
OAUTH_SECRET=your_oauth_secret_here

# Static API key accepted as Bearer token (alternative to OAuth flow)
MCP_API_KEY=your_secure_random_token_here

# Registration token: clients must send this as software_id to register (RFC 7591)
# Leave empty to allow open registration (not recommended for production)
REGISTRATION_TOKEN=your_registration_token_here

# Public URL of the service (used as OAuth issuer)
SERVICE_URL=http://localhost:8080

# Server port (Cloud Run sets this automatically)
PORT=8080
